@model SuppliersModel


@{
    ViewData["Title"] = $"{Model.Type} Suppliers";
}

<h2>@Model.Type Suppliers</h2>

<table class="table table-bordered table-hover">
    <tr>
        <td>
            Id
        </td>
        <td>
            Name
        </td>
        <td>
            Parts
        </td>
    </tr>
    @foreach (var supplier in Model.Suppliers)
    {
        <tr>
            <th>
                @supplier.Id
            </th>
            <th>
                @supplier.Name
            </th>
            <th>
                @supplier.TotalParts
            </th>
        </tr>
    }
</table>