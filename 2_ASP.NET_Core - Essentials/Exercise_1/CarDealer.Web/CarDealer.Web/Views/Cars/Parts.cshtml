@model CarWithParts

@{
    ViewData["Title"] = "All cars with their Parts";
}

<h2>All cars with their Parts</h2>

<table class="table table-bordered table-hover">
    <tr>
        <td>
            Make
        </td>
        <td>
            Model
        </td>
        <td>
            Travelled Distance
        </td>
        <td>
            Parts
        </td>     
    </tr>
    @foreach (var car in Model.CarParts)
    {
        <tr>
            <th>
                @car.Make
            </th>
            <th>
                @car.Model
            </th>
            <th>
                @(car.TraveledDistance / 1000) Km
            </th>
            <th>
                <ul>
                    @foreach (var part in car.Parts)
                    { 
                        <li>
                            @part.Name - $@part.Price.ToString("F2")
                        </li>
                    }                 
                </ul>
            </th>
        </tr>
    }
</table>