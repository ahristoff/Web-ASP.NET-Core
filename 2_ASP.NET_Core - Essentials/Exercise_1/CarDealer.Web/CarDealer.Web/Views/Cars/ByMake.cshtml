@model CarsByMakeModel

@{
    ViewData["Title"] = "${Model.Make} Cars";
}

<h2>@Model.Make Cars</h2>

<table class="table table-bordered table-hover">
    <tr>
        <td>
            Make
        </td>
        <td>
            Model
        </td>
        <td>
            Travelled Distance
        </td>
    </tr>
    @foreach (var car in Model.Cars)
    { 
    <tr>
        <th>
            @car.Make
        </th>
        <th>
            @car.Model
        </th>
        <th>
            @(car.TraveledDistance/1000) Km
        </th>
    </tr>
    }
</table>

