@model CreateSaleModel 

@{
    ViewData["Title"] = "Create Sale";
}

<h2>@ViewData["Title"]</h2>


<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group" asp-validation-summary="All">
                <label asp-for="Customers">Customer</label>
                <select asp-for="CustomerId" asp-items="Model.Customers" class="form-control">
                    <option value="value"></option>
                </select>
               
            </div>
            <div class="form-group" asp-validation-summary="All">
                <label asp-for="Cars">Car</label>
                <select asp-for="CarId" asp-items="Model.Cars" class="form-control">
                    <option value="value"></option>
                </select>
                
            </div>
            <div class="form-group">
                <label asp-for="Discount">Discount: </label>
                <input asp-for="Discount" min="0" class="form-control">
                <span asp-validation-for="Discount" class="form-text text-danger"></span>
            </div>
            <div>
                <input class="btn btn-success" type="submit" value="Submit" />               
            </div>
        </form>
    </div>
</div>
