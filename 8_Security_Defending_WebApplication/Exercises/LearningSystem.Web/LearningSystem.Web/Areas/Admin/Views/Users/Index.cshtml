@model AdminUserListingsViewModel
@{
    ViewData["Title"] = "Useradministration";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Username
            </th>
            <th>
                E-mail
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
        <tr>
            <th class="col-md-3" style="vertical-align: middle">
                @user.Username
            </th>
            <th class="col-md-3" style="vertical-align: middle">
                @user.Email
            </th>
            <th class="col-md-6">
                <form asp-controller="Users" asp-action="AddToRole" method="post">
                    
                        <div class="col-md-9 form-group">
                            <input type="hidden" name="UserId" value="@user.ID"/>
                            <select name="Roles" asp-items="Model.Roles" multiple class="form-control">
                                <option value="value"></option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <input class="btn btn-sm btn-primary" type="submit" value="Add To Role" />
                        </div>
                   
                </form>
            </th>
        </tr>
        }
    </tbody>

</table>