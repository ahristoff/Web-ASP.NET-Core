@model IEnumerable<CoursesListingServiceModel>
@{
    ViewData["Title"] = "Trainer Courses";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Start date</th>
            <th>End date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
        <tr>
            <th>Name: @course.Name</th>
            <th>Start date: @course.StartDate.ToShortDateString()</th>
            <th>End date: @course.EndDate.ToShortDateString()</th>
            <th>
                <a asp-controller="Trainer" asp-action="Students" asp-route-courseId="@course.Id">Students</a>               
            </th>
        </tr>
        }
    </tbody>   
</table>