@model CreateCarModel
@{
    ViewData["Title"] = "Create Car";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Make">Make: </label>
                <input asp-for="Make" class="form-control">
                <span asp-validation-for="Make" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model">Model: </label>
                <input asp-for="Model" class="form-control">
                <span asp-validation-for="Model" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TravelledDistance">TravelledDistance: </label>
                <input asp-for="TravelledDistance" min="0" class="form-control">
                <span asp-validation-for="TravelledDistance" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AllParts">Parts Name</label>
                <select asp-for="SelectedParts" asp-items="Model.AllParts" multiple class="form-control">
                    <option value="value"></option>
                </select>
                <small>* Hold "Ctrl" to select multiply parts</small>
            </div>
            <div>
                <input class="btn btn-success" type="submit" value="Add Car" />              
            </div>
        </form>
    </div>
</div>